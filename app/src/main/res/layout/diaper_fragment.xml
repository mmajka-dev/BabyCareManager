<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feeding.FeedingFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_toolbar"
            android:backgroundTint="@color/colorYellow"
            >
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:navigationIcon="@drawable/ic_back"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/baby_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diaper"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/app_bar"
            android:layout_marginTop="12dp"
            android:padding="10dp"
            >

            <Button
                android:id="@+id/poo"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:padding="2dp"
                android:layout_toStartOf="@+id/pee"
                android:background="@drawable/shape_action_button"
                android:foreground="@drawable/ripple"
                app:backgroundTint="@color/colorRed"
                android:text="Poo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:layout_marginEnd="15dp"/>

            <Button
                android:id="@+id/pee"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentEnd="true"
                app:backgroundTint="@color/colorYellow"
                android:text="Pee"
                android:foreground="@drawable/ripple"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:background="@drawable/shape_action_button"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/WelcomeScreenTitle"
            android:textSize="60sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/buttons"
            android:textColor="@color/colorYellow"
            android:text="00:00"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/comment"
            style="@style/CommentEditText"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_below="@+id/time"
            android:layout_marginStart="8dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_edit_text"
            android:gravity="top|start"
            android:hint="Comment"
            android:inputType="textPersonName"
            android:paddingTop="15dp" />

        <Button
                android:id="@+id/submit"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:background="@drawable/ic_check"
                app:backgroundTint="@color/colorYellow" />

        <ImageButton
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@id/time"
            android:backgroundTint="@color/colorTransparent"
            app:srcCompat="@drawable/ic_edit"
            android:layout_below="@+id/buttons"
            android:layout_marginTop="40dp"
            app:tint="@color/colorYellow" />
    </RelativeLayout>
</layout>