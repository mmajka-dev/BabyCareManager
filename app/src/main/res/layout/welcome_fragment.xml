<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome.WelcomeFragment">

    <TextView
        android:id="@+id/welcome"
        style="@style/WelcomeScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Welcome to \n BabyCare" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/welcome"
        android:gravity="top|center"
        android:background="@drawable/splash_background">

        <EditText
            android:id="@+id/baby_name"
            style="@style/EditText"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:inputType="textPersonName"
            android:hint="Name" />

        <EditText
            android:id="@+id/birthday"
            style="@style/EditText"
            android:layout_below="@id/baby_name"
            android:layout_centerHorizontal="true"
            android:hint="Birthday"
            />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/done"
            style="@style/MaterialButtonWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="DONE"
            android:layout_below="@id/birthday"
            android:layout_centerHorizontal="true"
            app:icon="@drawable/ic_check"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/code_card"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:cardCornerRadius="15dp" android:layout_alignParentBottom="true"
            android:layout_marginEnd="25dp" android:layout_marginStart="25dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/card_title"
                    style="@style/WelcomeCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I have an invite code"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    />

                <EditText
                    android:id="@+id/code"
                    style="@style/EditText"
                    android:layout_below="@id/card_title"
                    android:layout_centerHorizontal="true"
                    android:inputType="textPersonName"
                    android:hint="Name"
                    android:visibility="gone"/>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/ok_code"
                    android:visibility="gone"
                    style="@style/MaterialButtonPrimary"
                    android:layout_below="@id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    app:icon="@drawable/ic_check"
                    android:layout_alignParentEnd="true"
                    app:elevation="0dp"
                    android:text="OK" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>
</layout>